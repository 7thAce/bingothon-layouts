{
  "name": "bingothon-layouts",
  "version": "1.0.0",
  "description": "Layouts for Bingothon using the template for NodeCG bundles that use Vue.js and TypeScript.",
  "homepage": "https://github.com/zoton2/nodecg-vue-ts-template#readme",
  "bugs": {
    "url": "https://github.com/zoton2/nodecg-vue-ts-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bingothon/bingothon-layouts.git"
  },
  "license": "MIT",
  "author": "zoton2",
  "scripts": {
    "build": "run-s build:*",
    "build:browser": "trash .cache && cross-env NODE_ENV=production npm run bundle",
    "build:extension": "trash extension && npx tsc -b tsconfig.extension.json",
    "bundle": "trash graphics && trash dashboard && node script/bundle.js",
    "start": "node ../..",
    "watch": "run-p watch:*",
    "watch:browser": "npm run bundle",
    "watch:extension": "trash extension && npx tsc -b tsconfig.extension.json -w",
    "autofix": "run-s autofix:*",
    "autofix:browser": "npx eslint --fix --ext .ts,.vue,.html src/dashboard && eslint --fix --ext .js,.vue src/graphics",
    "autofix:extension": "npx eslint --fix --ext .ts src/extension",
    "typeschemas": "node script/typeschemas.js"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.13",
    "@types/deep-equal": "^1.0.1",
    "@types/request-promise": "^4.1.44",
    "@types/ws": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "@vue/component-compiler-utils": "^3.0.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-vue": "^5.2.3",
    "json-schema-to-typescript": "^7.0.0",
    "nodecg": "^1.4.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.3",
    "trash-cli": "^3.0.0",
    "typescript": "^3.5.3",
    "vue": "^2.6.10",
    "vue-class-component": "^7.0.2",
    "vue-hot-reload-api": "^2.3.3",
    "vue-property-decorator": "^8.1.0",
    "vue-template-compiler": "^2.6.10"
  },
  "alias": {
    "vue": "./node_modules/vue/dist/vue.esm.js"
  },
  "nodecg": {
    "compatibleRange": "^1.0.0",
    "dashboardPanels": [
      {
        "name": "example",
        "title": "Example",
        "file": "example.html"
      },
      {
        "name": "bingo-control",
        "title": "Bingo Control",
        "file": "bingo-control.html",
        "width": 2
      }
    ],
    "graphics": [
      {
        "file": "example.html",
        "width": 1920,
        "height": 1080
      }
    ]
  },
  "vue": {
    "runtimeCompiler": true
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "deep-equal": "^1.0.1",
    "request-promise": "^4.2.4",
    "vuex": "^3.1.1",
    "ws": "^7.1.2"
  }
}
