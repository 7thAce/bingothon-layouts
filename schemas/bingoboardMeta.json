{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "required": ["boardHidden","playerColors","colorShown"],
    "properties": {
        "boardHidden": {
            "type":"boolean",
            "default": true
        },
        "playerColors": {
            "$comment": "The colors the players (not teams) have choosen, in that order",
            "type":"array",
            "default":[],
            "items": {
                "type":"string",
                "enum": ["pink", "red", "orange", "brown", "yellow", "green", "teal", "blue", "navy", "purple"]
            }
        },
        "colorShown": {
            "type":"boolean",
            "default":true
        },
        "countShown": {
            "type":"boolean",
            "default":true
        },
        "manualScoreOverride": {
            "type": "boolean",
            "default":false
        },
        "manualScores": {
            "$comment": "Manual scores given by BingoControl Dashboard",
            "type":"array",
            "default":[],
            "items": {
                "type":"number"
            }
        }
    }
}