{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "required": ["boardHidden","playerColors","colorCounts","colorShown"],
    "properties": {
        "boardHidden": {
            "type":"boolean",
            "default": true
        },
        "playerColors": {
            "$comment": "The colors the players (not teams) have choosen, in that order",
            "type":"array",
            "default":[],
            "items": {
                "type":"string",
                "enum": ["pink", "red", "orange", "brown", "yellow", "green", "teal", "blue", "navy", "purple"]
            }
        },
        "colorCounts": {
            "default": {"pink":0, "red":0, "orange":0, "brown":0, "yellow":0, "green":0, "teal":0, "blue":0, "navy":0, "purple":0},
            "$comment": "How many fields of each color are  marked on the board",
            "type":"object"
        },
        "colorShown": {
            "type":"boolean",
            "default":true
        },
        "countShown": {
            "type":"boolean",
            "default":true
        }
    }    
}